body {
	position: relative;
	overflow-x: hidden;
}

body, html {
	height: 100%;
}

/*-------------------------------*/
/*           Wrappers            */
/*-------------------------------*/
form {
	display: inline;
}

.boutonStop {
	width: 38px;
	height: 38px;
	background: #cc0000;
	box-shadow: 2px 2px 8px #aaa;
	font: 13px Arial;
	border-radius: 50%;
	border: none;
	color: #fff;
}

.boutonStart {
	width: 38px;
	height: 38px;
	background: #008000;
	box-shadow: 2px 2px 8px #aaa;
	font: 13px Arial;
	border-radius: 50%;
	border: none;
	color: #fff;
}

#wrapper {
	padding-left: 0;
	-webkit-transition: all 0.5s ease;
	-moz-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}

#wrapper.toggled {
	padding-left: 220px;
}
/*-------------------------------*/
/*            Overlay            */
/*-------------------------------*/
.overlay {
	position: fixed;
	display: none;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(250, 250, 250, .8);
	z-index: 1;
}